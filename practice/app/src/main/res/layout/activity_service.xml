<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/bindService_local_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bindService- local"/>

    <Button
        android:id="@+id/bindService_remote_activity_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bindService- remote- activity"/>

    <Button
        android:id="@+id/bindService_remote_aidl_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bindService- remote- aidl"/>
</LinearLayout>